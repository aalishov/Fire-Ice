@model FireAndIce.ViewModels.Requests.EditTechRequestViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Edit</h1>

<h4>Request</h4>
<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3" style="background-color:#F0F2F5">
            <div class="card-body p-4 p-md-5">
                <form asp-controller="Requests" asp-action="EditByTech" method="post">
                    <h4>Edit request.</h4>
                    <hr />
                    @if (Model.Url != null)
                    {
                        <img src="data:image/png; base64,@Html.DisplayFor(modelItem => Model.Url)" height="350" width="100%">
                    }
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" disabled />
                        <span asp-validation-for=" Name" class="text-danger"></span>
                        <input type="hidden" asp-for="Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for=" Address"></label>
                        <input asp-for=" Address" class="form-control" disabled />
                        <input type="hidden" asp-for="Address" />
                        <span asp-validation-for=" Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" disabled />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VisitDate"></label>
                        <input asp-for="VisitDate" class="form-control" disabled />
                        <span asp-validation-for="VisitDate" class="text-danger"></span>
                    </div>
                    @if (Model.Status != FireAndIce.Data.Models.Enums.Status.Pending && Model.Status != FireAndIce.Data.Models.Enums.Status.Finished)
                    {
                        <div class="form-group">
                            <label asp-for="Status"></label>
                            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FireAndIce.Data.Models.Enums.Status>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <label asp-for="Status"></label>
                            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FireAndIce.Data.Models.Enums.Status>()" disabled></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    }

                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
